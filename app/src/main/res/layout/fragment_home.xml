<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragmants.Fragment_home">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/search_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:elevation="11dp"
                app:cardCornerRadius="12dp">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.cardview.widget.CardView>

            <include layout="@layout/image_slider_view" />

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp">

                    <LinearLayout
                        android:id="@+id/home_beauty"
                        style="@style/category_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            style="@style/style_circular"
                            android:src="@drawable/beauty" />

                        <TextView
                            style="@style/style_circular_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/beauty" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_ethnic"
                        style="@style/category_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            style="@style/style_circular"
                            android:src="@drawable/fashion_man" />

                        <TextView
                            style="@style/style_circular_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/ethnic_sets" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_fashion"
                        style="@style/category_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            style="@style/style_circular"
                            android:src="@drawable/fashion_women" />

                        <TextView
                            style="@style/style_circular_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/fashion" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_mens"
                        style="@style/category_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            style="@style/style_circular"
                            android:src="@drawable/man" />

                        <TextView
                            style="@style/style_circular_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/mens" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_women"
                        style="@style/category_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            style="@style/style_circular"
                            android:src="@drawable/women" />

                        <TextView
                            style="@style/style_circular_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/womens" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/home_kid"
                        style="@style/category_linearlayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            style="@style/style_circular"
                            android:src="@drawable/kids_clothes" />

                        <TextView
                            style="@style/style_circular_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/kids" />
                    </LinearLayout>

                </LinearLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_home_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </ScrollView>
</RelativeLayout>